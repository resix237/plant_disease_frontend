{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,  // Mettez à false ou supprimez cette ligne
    "noUnusedParameters": false  // Mettez à false ou supprimez cette ligne
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
